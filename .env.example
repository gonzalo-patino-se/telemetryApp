# =============================================================================
# MYSITE - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in the values
# NEVER commit .env to version control
# =============================================================================

# =============================================================================
# Django Core Settings
# =============================================================================
# Environment: 'development' or 'production' (controls security validations)
DJANGO_ENVIRONMENT=development

# REQUIRED in production - generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-super-secret-key-change-this-in-production

# MUST be False in production
DJANGO_DEBUG=False

# No wildcards allowed in production
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,your-vm-ip,your-domain.com

# =============================================================================
# Security Settings (set to True in production with HTTPS)
# =============================================================================
DJANGO_SECURE_SSL_REDIRECT=False
DJANGO_SESSION_COOKIE_SECURE=False
DJANGO_CSRF_COOKIE_SECURE=False
CSRF_TRUSTED_ORIGINS=https://your-domain.com,https://your-vm-ip

# =============================================================================
# Database Configuration
# =============================================================================
# SQLite (default for development)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3

# PostgreSQL (recommended for production)
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=mysite_db
# DB_USER=mysite_user
# DB_PASSWORD=your-secure-database-password
# DB_HOST=localhost
# DB_PORT=5432

# =============================================================================
# JWT Authentication
# =============================================================================
JWT_SIGNING_KEY=your-jwt-signing-key-change-this

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,https://your-domain.com

# =============================================================================
# Azure Data Explorer (ADX) Configuration
# =============================================================================
ADX_CLUSTER_URL=https://your-cluster.region.kusto.windows.net
ADX_DATABASE=your-database-name
ADX_CLIENT_ID=your-azure-client-id
ADX_CLIENT_SECRET=your-azure-client-secret
ADX_TENANT_ID=your-azure-tenant-id

# =============================================================================
# Redis Configuration (optional, for caching/celery)
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Gunicorn Configuration
# =============================================================================
GUNICORN_BIND=0.0.0.0:8000
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_LOG_LEVEL=info

# =============================================================================
# Frontend Configuration (for build process)
# =============================================================================
VITE_API_URL=http://localhost:8000/api
VITE_WS_URL=ws://localhost:8000/ws
